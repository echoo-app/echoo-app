{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@echoo/client-web/mixins": ["apps/client-web/src/app/mixins/index.ts"],
      "@echoo/echoo-icons": ["libs/echoo-icons/src/index.ts"],
      "@echoo/fitter-element": ["libs/fitter-element/src/index.ts"],
      "@echoo/github-button": ["libs/github-button/src/index.ts"],
      "@echoo/web-storage-service": ["libs/web-storage-service/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
